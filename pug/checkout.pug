extends layout

block content
  .forms
    h1 Checkout

    form(action="/order-confirmed", method="GET")
      //- Customer Info
      fieldset
        legend Customer Information
        label(for="fullName") Full Name:
        input#fullName(type="text", name="fullName", required)

        label(for="email") Email Address:
        input#email(type="email", name="email", required)

        label(for="address") Shipping Address:
        input#address(type="text", name="address", required)

      //- Payment Info
      fieldset
        legend Payment Details
        label(for="cardNumber") Card Number:
        input#cardNumber(type="text", name="cardNumber", required, placeholder="1234 5678 9012 3456")

        label(for="expiry") Expiration Date:
        input#expiry(type="text", name="expiry", required, placeholder="MM/YY")

        label(for="cvv") CVV:
        input#cvv(type="text", name="cvv", required, placeholder="123")

      //- Submit Button
      button(type="submit" style="margin-top: 1rem; background-color: #007acc; color: white; padding: 0.5rem 1rem; border-radius: 5px; border: none; cursor: pointer;") Place Order
