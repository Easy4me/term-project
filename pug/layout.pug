doctype html
html(lang="en")
  head
    title Action! Autos â€“ Movie-Inspired Cars
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/style.css")
  body
    header
      nav(role="navigation" aria-label="Main navigation")
        .nav-top
          .nav-left
            a(href="/") Action! Autos
          .nav-mid
            form(action="/search", method="GET", class="search-bar")
              input(type="text", name="q", placeholder="Search cars...", aria-label="Search")
              button(type="submit") Search
          .nav-right
            ul
              li: a(href="/login") Login
              li: a(href="/cart") Cart
        .nav-bottom
          ul
            li: a(href="/?type=sport%20car#products") Sports Cars
            li: a(href="/?type=hot%20rod#products") Hot Rods
            li: a(href="/?type=SUV#products") SUVs
            li: a(href="/?type=motorcycle#products") Motorcycles

    main
      block content

    footer
      .footer-left
        a(href="/about") About Us / FAQ
      .footer-right
        p &copy; #{year || new Date().getFullYear()} Action! Autos

    block scripts
