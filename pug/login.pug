extends layout

block content
  .login-form(style="max-width: 400px; margin: 2rem auto; background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.05);")
    h1(style="text-align: center;") Login

    form(action="/login", method="POST")
      label(for="email") Email:
      input#email(type="email", name="email", required)

      label(for="password") Password:
      input#password(type="password", name="password", required)

      button(type="submit" style="margin-top: 1rem; background-color: #007acc; color: white; padding: 0.5rem 1rem; border: none; border-radius: 5px;") Login

    p(style="text-align: center;")
      | Don't have an account?
      a(href="/registration") Register here
