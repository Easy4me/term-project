extends layout

block content
  h1 Search Results for "#{query}"

  if results.length === 0
    p No products found matching "#{query}".
  else
    each car in results
      .car-item
        a(href=`/product/${car.shortName}`)
          img(src=car.images[0], alt=car.fullName, width="200")
          h3= car.fullName
          p= car.description.substring(0, 100) + "..."
          p Price: $#{car.price.toLocaleString()}

